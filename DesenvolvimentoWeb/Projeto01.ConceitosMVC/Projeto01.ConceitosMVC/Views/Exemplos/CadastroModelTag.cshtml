@model Produto

<h2>Cadastro de produtos - Tag Helper</h2>
<div class="margem">
    <form asp-action="CadastroModelTag">
        <div class="mb-3">
            <label asp-for="Codigo" class="form-label"></label>
            <input asp-for="Codigo" class="form-control"/>
            <span asp-validation-for="Codigo"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descricao" class="form-label"></label>
            <input asp-for="Descricao" class="form-control"/>
            <span asp-validation-for="Descricao"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Preco" class="form-label"></label>
            <input asp-for="Preco" class="form-control"/>
            <span asp-validation-for="Preco"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>