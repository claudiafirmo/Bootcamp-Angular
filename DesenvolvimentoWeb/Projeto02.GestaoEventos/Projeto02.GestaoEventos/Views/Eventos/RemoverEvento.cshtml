@model Projeto02.GestaoEventos.Models.Evento

@{
    ViewData["Title"] = "RemoverEvento";
}

<h1>Confirmação</h1>

<h3 class="text-danger">Tem certeza que deseja deletar este evento?</h3>
<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
    </dl>
    
    <form asp-action="RemoverEvento">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Sim, remover" class="btn btn-danger" /> |
        <a asp-action="ListarTodos">Não, voltar para lista</a>
    </form>
</div>
