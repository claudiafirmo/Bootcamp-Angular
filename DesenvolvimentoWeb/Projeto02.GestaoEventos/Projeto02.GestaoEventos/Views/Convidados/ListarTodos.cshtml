@model IEnumerable<Projeto02.GestaoEventos.Models.Convidado>

@{
    ViewData["Title"] = "ListarTodos";
}

<h1>Listagem de convidados</h1>

<p>
    <a asp-action="AdicionarConvidado">Incluir novo convidado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Alterar", "EditarConvidado", new { id=item.id}) |
                @Html.ActionLink("Detalhes", "DetalhesConvidado", new { id=item.id}) |
                @Html.ActionLink("Excluir", "ExcluirConvidado", new { id=item.id})
            </td>
        </tr>
}
    </tbody>
</table>
