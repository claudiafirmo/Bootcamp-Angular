@model Projeto02.GestaoEventos.Models.Convidado

@{
    ViewData["Title"] = "ExcluirConvidado";
}

<h1>Confirmação</h1>

<h3 class="text-danger">Você tem certeza de que deseja excluir esse convidado?</h3>
<div>
    <h4>Convidado:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>
    
    <form asp-action="ExcluirConvidado">
        <input type="submit" value="Sim, excluir" class="btn btn-danger" /> |
        <a asp-action="ListarTodos">Não, voltar para a lista</a>
    </form>
</div>
